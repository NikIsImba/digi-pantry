{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"bracketSameLine": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": "info",
			"complexity": "warn",
			"correctness": "error",
			"nursery": "warn",
			"performance": "warn",
			"security": "error",
			"style": "warn",
			"suspicious": "error",
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on",
				"recommended": true
			}
		}
	}
}
